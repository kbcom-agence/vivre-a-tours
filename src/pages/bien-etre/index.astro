  { label: 'Accueil', href: '/' },
  { label: 'Bien-etre a Tours' },
];

const services = [
  {
    name: 'Hypnotherapeute',
    slug: 'hypnotherapeute-tours',
    description: 'Arret tabac, gestion du stress, phobies... Les meilleurs praticiens de Tours.',
