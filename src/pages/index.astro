---
import BaseLayout from '../layouts/BaseLayout.astro';

// Schema WebSite pour la page d'accueil
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Vivre a Tours",
  "url": "https://vivre-a-tours.fr",
  "description": "Le guide local pour vivre a Tours : quartiers, sorties, services, bons plans par un Tourangeau.",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://vivre-a-tours.fr/recherche?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
};

const categories = [
  {
    label: 'Que faire',
    href: '/que-faire/',
    icon: 'üéâ',
    description: 'Sorties, evenements et activites',
    color: 'from-orange-400 to-pink-500'
  },
  {
    label: 'Quartiers',
    href: '/quartiers/',
    icon: 'üèòÔ∏è',
    description: 'Guides complets pour s\'installer',
    color: 'from-emerald-400 to-teal-500'
  },
  {
    label: 'Bien-etre',
    href: '/bien-etre/',
    icon: 'üíÜ',
    description: 'Spa, sport et sante',
    color: 'from-violet-400 to-purple-500'
  },
  {
    label: 'Manger',
    href: '/manger/',
    icon: 'üçΩÔ∏è',
    description: 'Restaurants et bonnes tables',
    color: 'from-amber-400 to-orange-500'
  },
  {
    label: 'Hebergement',
    href: '/hebergement/',
    icon: 'üè®',
    description: 'Hotels, gites et love rooms',
    color: 'from-rose-400 to-red-500'
  },
  {
    label: 'Services',
    href: '/services/',
    icon: 'üîß',
    description: 'Artisans et professionnels',
    color: 'from-blue-400 to-indigo-500'
  },
];

const featuredArticles = [
  {
    title: 'Que faire a Tours ce week-end',
    description: 'Concerts, expos, marches et sorties selectionnees chaque semaine.',
    href: '/que-faire/ce-week-end/',
    badge: 'Populaire'
  },
  {
    title: 'Quartier Velpeau',
    description: 'Le quartier village prefere des Tourangeaux. Guide complet.',
    href: '/quartiers/velpeau/',
    badge: 'Guide'
  },
  {
    title: 'Restaurants vegetariens',
    description: '8 adresses testees pour manger veggie a Tours.',
    href: '/manger/restaurant-vegetarien-tours/',
    badge: 'Selection'
  },
];
---

<BaseLayout
  title="Vivre a Tours : Le guide local par un Tourangeau"
  description="Decouvrez Tours comme un local : quartiers, restaurants, sorties, services. Conseils authentiques pour vivre ou visiter Tours."
  schema={websiteSchema}
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-bg"></div>
    <div class="hero-content">
      <div class="container">
        <div class="hero-badge">
          <span class="badge-dot"></span>
          Guide local depuis 2024
        </div>
        <h1 class="hero-title">
          Decouvrez <span class="text-gradient">Tours</span><br/>
          comme un vrai Tourangeau
        </h1>
        <p class="hero-subtitle">
          Quartiers, bons plans, sorties, restaurants... Le guide authentique
          pour vivre ou visiter la plus belle ville de la Loire.
        </p>

        <div class="hero-cta">
          <a href="/que-faire/" class="btn btn-primary btn-lg">
            <span>Explorer Tours</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
          <a href="/quartiers/" class="btn btn-secondary btn-lg">
            Choisir mon quartier
          </a>
        </div>

        <div class="hero-stats">
          <div class="stat">
            <span class="stat-number">18+</span>
            <span class="stat-label">Guides</span>
          </div>
          <div class="stat-divider"></div>
          <div class="stat">
            <span class="stat-number">50+</span>
            <span class="stat-label">Adresses</span>
          </div>
          <div class="stat-divider"></div>
          <div class="stat">
            <span class="stat-number">100%</span>
            <span class="stat-label">Local</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="categories">
    <div class="container">
      <div class="section-header">
        <h2>Explorez Tours</h2>
        <div class="section-divider"></div>
        <p class="section-subtitle">
          Tout ce qu'il faut savoir pour profiter de la ville
        </p>
      </div>

      <div class="categories-grid">
        {categories.map((cat) => (
          <a href={cat.href} class="category-card">
            <div class="category-icon-wrapper">
              <span class="category-icon">{cat.icon}</span>
            </div>
            <div class="category-content">
              <h3>{cat.label}</h3>
              <p>{cat.description}</p>
            </div>
            <div class="category-arrow">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Section -->
  <section class="featured">
    <div class="container">
      <div class="section-header">
        <h2>Articles populaires</h2>
        <div class="section-divider"></div>
      </div>

      <div class="featured-grid">
        {featuredArticles.map((article, index) => (
          <a href={article.href} class={`featured-card ${index === 0 ? 'featured-main' : ''}`}>
            <div class="featured-badge">{article.badge}</div>
            <h3>{article.title}</h3>
            <p>{article.description}</p>
            <span class="featured-link">
              Lire le guide
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="about">
    <div class="container">
      <div class="about-content">
        <div class="about-text">
          <h2>Pourquoi ce guide ?</h2>
          <div class="section-divider" style="margin-left: 0;"></div>
          <p>
            Tourangeau depuis plus de 10 ans, j'ai cree ce site pour partager mes vraies bonnes adresses.
            <strong>Pas de contenu sponsorise</strong>, pas de listes generiques copiees d'ailleurs.
          </p>
          <p>
            Juste mon experience de la ville, mes decouvertes, mes coups de coeur
            (et parfois mes deceptions). Un guide honnete, par un local, pour les locaux
            et ceux qui veulent le devenir.
          </p>
          <a href="/a-propos/" class="btn btn-outline">
            En savoir plus sur moi
          </a>
        </div>
        <div class="about-features">
          <div class="feature">
            <div class="feature-icon">‚úì</div>
            <div class="feature-text">
              <strong>Avis honnetes</strong>
              <span>Les + et les - de chaque adresse</span>
            </div>
          </div>
          <div class="feature">
            <div class="feature-icon">‚úì</div>
            <div class="feature-text">
              <strong>Teste localement</strong>
              <span>Toutes les adresses sont verifiees</span>
            </div>
          </div>
          <div class="feature">
            <div class="feature-icon">‚úì</div>
            <div class="feature-text">
              <strong>Mis a jour</strong>
              <span>Contenu actualise regulierement</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Une question sur Tours ?</h2>
        <p>
          Vous cherchez un quartier specifique, une adresse particuliere ?
          N'hesitez pas a me contacter, je reponds a tout le monde.
        </p>
        <a href="/contact/" class="btn btn-primary btn-lg">
          Me contacter
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    padding: 6rem 0 5rem;
    overflow: hidden;
    min-height: 80vh;
    display: flex;
    align-items: center;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #1e40af 0%, #3b82f6 50%, #0ea5e9 100%);
    z-index: 0;
  }

  .hero-bg::before {
    content: '';
    position: absolute;
    inset: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.5;
  }

  .hero-bg::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 150px;
    background: linear-gradient(to top, white, transparent);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    color: white;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: #4ade80;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 800;
    line-height: 1.1;
    color: white;
    margin-bottom: 1.5rem;
    letter-spacing: -0.03em;
  }

  .hero-title .text-gradient {
    background: linear-gradient(135deg, #fde68a 0%, #fbbf24 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 4.5rem;
    }
  }

  .hero-subtitle {
    font-size: 1.25rem;
    max-width: 600px;
    margin: 0 auto 2.5rem;
    opacity: 0.9;
    line-height: 1.6;
  }

  .hero-cta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 3rem;
  }

  .hero .btn-primary {
    background: white;
    color: #1e40af;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  }

  .hero .btn-primary:hover {
    background: #f0f9ff;
    transform: translateY(-2px);
    box-shadow: 0 6px 30px rgba(0, 0, 0, 0.2);
  }

  .hero .btn-secondary {
    background: transparent;
    border: 2px solid rgba(255, 255, 255, 0.5);
    color: white;
  }

  .hero .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: white;
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    gap: 2rem;
    padding-top: 2rem;
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-size: 2rem;
    font-weight: 800;
    line-height: 1;
  }

  .stat-label {
    font-size: 0.875rem;
    opacity: 0.8;
  }

  .stat-divider {
    width: 1px;
    background: rgba(255, 255, 255, 0.3);
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-subtitle {
    color: #6b7280;
    font-size: 1.125rem;
    max-width: 500px;
    margin: 0 auto;
  }

  /* Categories Section */
  .categories {
    padding: 5rem 0;
    background: white;
  }

  .categories-grid {
    display: grid;
    gap: 1rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 640px) {
    .categories-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .categories-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .category-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .category-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .category-card:hover {
    border-color: #3b82f6;
    transform: translateY(-4px);
    box-shadow: 0 12px 40px -12px rgba(59, 130, 246, 0.25);
    text-decoration: none;
  }

  .category-card:hover::before {
    opacity: 1;
  }

  .category-icon-wrapper {
    position: relative;
    z-index: 1;
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f3f4f6;
    border-radius: 0.75rem;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .category-card:hover .category-icon-wrapper {
    background: white;
    transform: scale(1.1);
  }

  .category-icon {
    font-size: 1.5rem;
    line-height: 1;
  }

  .category-content {
    position: relative;
    z-index: 1;
    flex: 1;
    min-width: 0;
  }

  .category-content h3 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: #111827;
  }

  .category-content p {
    font-size: 0.875rem;
    color: #6b7280;
    margin: 0;
  }

  .category-arrow {
    position: relative;
    z-index: 1;
    color: #d1d5db;
    transition: all 0.3s ease;
  }

  .category-card:hover .category-arrow {
    color: #3b82f6;
    transform: translateX(4px);
  }

  /* Featured Section */
  .featured {
    padding: 5rem 0;
    background: #f9fafb;
  }

  .featured-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .featured-grid {
      grid-template-columns: 1fr 1fr;
    }

    .featured-main {
      grid-column: span 2;
    }
  }

  @media (min-width: 1024px) {
    .featured-grid {
      grid-template-columns: 2fr 1fr 1fr;
    }

    .featured-main {
      grid-column: span 1;
    }
  }

  .featured-card {
    display: flex;
    flex-direction: column;
    padding: 2rem;
    background: white;
    border-radius: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 1px solid #e5e7eb;
  }

  .featured-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px -12px rgba(0, 0, 0, 0.15);
    text-decoration: none;
  }

  .featured-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 100%);
    color: #4338ca;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 9999px;
    margin-bottom: 1rem;
    width: fit-content;
  }

  .featured-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: #111827;
  }

  .featured-card p {
    color: #6b7280;
    font-size: 0.9375rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    flex: 1;
  }

  .featured-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #2563eb;
    font-weight: 600;
    font-size: 0.9375rem;
    transition: gap 0.2s ease;
  }

  .featured-card:hover .featured-link {
    gap: 0.75rem;
  }

  /* About Section */
  .about {
    padding: 5rem 0;
    background: white;
  }

  .about-content {
    display: grid;
    gap: 3rem;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .about-content {
      grid-template-columns: 1.2fr 1fr;
    }
  }

  .about-text h2 {
    margin-bottom: 0.5rem;
  }

  .about-text p {
    color: #4b5563;
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .about-text .btn {
    margin-top: 1rem;
  }

  .about-features {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .feature {
    display: flex;
    gap: 1rem;
    padding: 1.25rem;
    background: #f9fafb;
    border-radius: 0.75rem;
    transition: all 0.2s ease;
  }

  .feature:hover {
    background: #f0f9ff;
    transform: translateX(4px);
  }

  .feature-icon {
    width: 2rem;
    height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    font-weight: 700;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .feature-text {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .feature-text strong {
    color: #111827;
    font-size: 0.9375rem;
  }

  .feature-text span {
    color: #6b7280;
    font-size: 0.875rem;
  }

  /* CTA Section */
  .cta-section {
    padding: 5rem 0;
    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h2 {
    margin-bottom: 1rem;
  }

  .cta-content p {
    color: #4b5563;
    font-size: 1.125rem;
    margin-bottom: 2rem;
  }
</style>
